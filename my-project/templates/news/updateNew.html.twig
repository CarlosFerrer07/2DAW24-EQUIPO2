{% extends "base.html.twig" %}

{% block body %}

                    <div id="form_container">
                        <form method="post" action="">
                            <div>
                                <h2>Actualizar Noticia</h2>
                            </div>

                            <label for="title">Título</label>
                            <div>
                                <input name="title" type="text" maxlength="45" size="45" value="{{new.getTitle()}}" />
                            </div>

                            <label for="date">fecha Noticia</label>
                            <div>
                                <input name="date" type="date" value="{{new.getStartDate()| date('d-m-Y')}}" />
                            </div>

                            <label for="image">Imagen</label>
                            <div>
                                <input name="image" type="text" maxlength="45" size="45" value="{{new.getImage()}}" />
                            </div>

                            <label for="source">Fuente</label>
                            <div>
                                <input name="source" type="text" maxlength="45" size="45" value="{{new.getSource()}}" />
                            </div>

                            <label for="description">Descripción</label>
                            <div>
                                <textarea name="description" cols="50" rows="5">{{ new.getDescription() }}</textarea>
                            </div>

                            <input type="submit" name="submit" value="Update" />
                        </form>
                        <br>
                        <a href="{{ path('app_news') }}">VOLVER</a>

                    </div>


{% endblock %}